<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/filter_parent"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life Story Lines" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="SHOW LIFE STORY LINES" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/settings_life_story_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/colorsG"/>

        <Switch
            android:id="@+id/settings_life_story_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Tree Lines" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="SHOW FAMILY TREE LINES" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/settings_family_tree_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/colorsB"/>

        <Switch
            android:id="@+id/settings_family_tree_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spouse Lines" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="SHOW SPOUSE LINES" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/settings_spouse_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/colorsR"/>

        <Switch
            android:id="@+id/settings_spouse_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Type" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="BACKGROUND DISPLAY ON MAP" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/settings_map_spinner"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:entries="@array/types"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/settings_resync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-sync Data" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="FROM FAMILYMAP SERVICE" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:id="@+id/settings_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                style="@style/filter_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="RETURNS TO LOGIN SCREEN" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>



</LinearLayout>